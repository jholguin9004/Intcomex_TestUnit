<?xml version="1.0" ?>
<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
	<argument name="data" xsi:type="array">
		<item name="js_config" xsi:type="array">
			<item name="provider" xsi:type="string">intcomex_unittest_unittest_model_form.intcomex_unittest_listing_data_source</item>
		</item>
		<item name="label" xsi:type="string" translate="true">General Information</item>
		<item name="template" xsi:type="string">templates/form/collapsible</item>
	</argument>
	<settings>
		<buttons>
			<button name="back" class="Intcomex\UnitTest\Block\Adminhtml\UnitTest\Edit\BackButton"/>
			<button name="delete" class="Intcomex\UnitTest\Block\Adminhtml\UnitTest\Edit\DeleteButton"/>
			<button name="save" class="Intcomex\UnitTest\Block\Adminhtml\UnitTest\Edit\SaveButton"/>
			<button name="save_and_continue" class="Intcomex\UnitTest\Block\Adminhtml\UnitTest\Edit\SaveAndContinueButton"/>
		</buttons>
		<namespace>intcomex_unittest_unittest_model_form</namespace>
		<dataScope>data</dataScope>
		<deps>
			<dep>intcomex_unittest_unittest_model_form.intcomex_unittest_listing_data_source</dep>
		</deps>
	</settings>
	<dataSource name="intcomex_unittest_listing_data_source">
		<argument name="data" xsi:type="array">
			<item name="js_config" xsi:type="array">
				<item name="component" xsi:type="string">Magento_Ui/js/form/provider</item>
			</item>
		</argument>
		<settings>
			<submitUrl path="*/*/save"/>
		</settings>
		<dataProvider name="intcomex_unittest_listing_data_source" class="Intcomex\UnitTest\Model\UnitTest\DataProvider">
			<settings>
				<requestFieldName>id</requestFieldName>
				<primaryFieldName>id</primaryFieldName>
			</settings>
		</dataProvider>
	</dataSource>
	<fieldset name="general">
		<settings>
			<label>General</label>
		</settings>
		<field name="name" formElement="input" sortOrder="10">
			<argument name="data" xsi:type="array">
				<item name="config" xsi:type="array">
					<item name="disabled" xsi:type="boolean">false</item>
					<item name="source" xsi:type="string">intcomex_unittest</item>
					<item name="validation" xsi:type="array">
						<item name="required-entry" xsi:type="boolean">true</item>
					</item>
				</item>
			</argument>
			<settings>
				<dataType>text</dataType>
				<label translate="true">Name</label>
				<dataScope>name</dataScope>
			</settings>
		</field>
		<field name="description" formElement="input" sortOrder="20">
			<argument name="data" xsi:type="array">
				<item name="config" xsi:type="array">
					<item name="disabled" xsi:type="boolean">false</item>
					<item name="source" xsi:type="string">intcomex_unittest</item>
					<item name="validation" xsi:type="array">
						<item name="required-entry" xsi:type="boolean">true</item>
					</item>
				</item>
			</argument>
			<settings>
				<dataType>text</dataType>
				<label translate="true">Description</label>
				<dataScope>description</dataScope>
			</settings>
		</field>
		<field name="status" formElement="input" sortOrder="30">
			<argument name="data" xsi:type="array">
				<item name="config" xsi:type="array">
					<item name="disabled" xsi:type="boolean">false</item>
					<item name="source" xsi:type="string">UnitTest</item>
					<item name="dataType" xsi:type="string">text</item>
                    <item name="label" xsi:type="string">Status</item>
                    <item name="dataScope" xsi:type="string">status</item>
					<item name="formElement" xsi:type="string">select</item>
					<item name="validation" xsi:type="array">
						<item name="required-entry" xsi:type="boolean">true</item>
					</item>
				</item>
                <item name="options" xsi:type="object">Intcomex\UnitTest\Model\ResourceModel\UnitTest\Status</item>				
			</argument>			
			<settings>
				<dataType>text</dataType>
				<label translate="true">Status</label>
				<dataScope>status</dataScope>
			</settings>  
		</field>
	</fieldset>
</form>
